<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">ニックネーム</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2_profile"><%= @user.content %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "POST"%>
      </h2>
      <div class="user__card_user_show">
       <% @posts.each do |post| %>
    <div class="content_post_user_show">
     <%= link_to image_tag(post.image, size: '400x400'), post_path(post.id), method: :get %>
    </div>
  <% end %>
  </div>
<% if @favorite_list.present? %>
 <h2 class="page-heading">
 <%= "お気に入りの投稿"%>
</h2>
<div class="user__card_favorite">
  <% @favorite_list.each do |post| %>
  <div class="user__post_favorite">
    <%= link_to image_tag(post.image, size: '300x300'), post_path(post.id), method: :get %>
 </div>
<% end %>
<% end %>
      </div>
    </div>
  </div>
</div>